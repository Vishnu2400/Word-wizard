<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/green"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_wordPartsOfSpeech"
            android:text="Exclamatory"
            android:textSize="15sp"
            android:padding="7dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_WordDefinitions"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/textView_wordSynonymsHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Synonyms"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView_wordSynonyms"
            android:textStyle="italic"
            android:scrollHorizontally="true"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:padding="8dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="16sp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView_wordAntonymsHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Antonyms for the word"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView_wordAntonyms"
            android:textStyle="italic"
            android:scrollHorizontally="true"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:text=""
            android:textSize="16sp"
            android:padding="8dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>